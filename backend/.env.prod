DB_CONNECTION_LIMIT=${CONNECTION_LIMIT:-10}
DB_POOL_TIMEOUT=${POOL_TIMEOUT:-35}
DB_SSL_MODE=verify-full
DB_SSL_ACCEPT=strict
# Use system CA store (RDS bundle is merged into it by Dockerfile update-ca-certificates)
DB_SSL_ROOT_CERT=/etc/ssl/certs/ca-certificates.crt
DATABASE_URL="postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB}?schema=${DB_SCHEMA}&connection_limit=${DB_CONNECTION_LIMIT}&pool_timeout=${DB_POOL_TIMEOUT}&sslmode=${DB_SSL_MODE}&sslaccept=${DB_SSL_ACCEPT}&sslrootcert=${DB_SSL_ROOT_CERT}&options=-csearch_path%3D${DB_SCHEMA}"
